---
import type { CategoryInfo } from '../utils/categories';

interface Props {
    categories: CategoryInfo[];
    selectedCategory?: string;
    currentParams?: Record<string, string>;
}

const { categories, selectedCategory, currentParams = {} } = Astro.props;

// Build URL with updated category filter
function buildCategoryUrl(categorySlug?: string): string {
    const params = new URLSearchParams(currentParams);
    if (categorySlug) {
        params.set('category', categorySlug);
    } else {
        params.delete('category');
    }
    params.delete('page'); // Reset to page 1 when filtering
    return `/products${params.toString() ? '?' + params.toString() : ''}`;
}

// Get current category label
const totalProducts = categories.reduce((sum, cat) => sum + cat.count, 0);
const currentCategory = selectedCategory
    ? categories.find(c => c.slug === selectedCategory)
    : null;
const currentLabel = currentCategory
    ? `${currentCategory.name} (${currentCategory.count})`
    : `All Categories (${totalProducts})`;
---

<div class="flex items-center gap-4">
    <label for="category-button" class="flex items-center gap-2 font-semibold text-gray-700 text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-primary">
            <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
        </svg>
        <span class="hidden md:inline">Category:</span>
    </label>
    <div class="relative">
        <button type="button" class="flex items-center gap-3 px-5 py-3 bg-white border-2 border-gray-200 rounded-lg font-medium text-gray-700 cursor-pointer transition-all min-w-[200px] justify-between hover:border-primary hover:bg-accent" id="category-button" aria-haspopup="true" aria-expanded="false">
            <span class="category-current">{currentLabel}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="chevron transition-transform">
                <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
        </button>
        <div class="absolute top-full mt-2 left-0 bg-white border-2 border-gray-200 rounded-lg shadow-lg min-w-[250px] max-h-96 overflow-y-auto opacity-0 invisible -translate-y-2 transition-all z-50" id="category-menu" role="menu">
            <a
                href={buildCategoryUrl()}
                class={`flex items-center gap-3 px-4 py-3 text-gray-700 text-sm transition-colors border-b border-gray-200 last:border-b-0 hover:bg-accent hover:text-primary ${!selectedCategory ? 'bg-accent text-primary font-semibold' : ''}`}
                role="menuitem"
            >
                <span class="flex-1">All Categories</span>
                <span class={`inline-flex items-center justify-center min-w-7 h-7 px-2 rounded-full text-xs font-semibold ${!selectedCategory ? 'bg-[#C9E4F3] text-primary' : 'bg-gray-100 text-gray-600'}`}>{totalProducts}</span>
                {!selectedCategory && (
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" class="text-primary shrink-0">
                        <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                )}
            </a>
            {categories.map(category => (
                <a
                    href={buildCategoryUrl(category.slug)}
                    class={`flex items-center gap-3 px-4 py-3 text-gray-700 text-sm transition-colors border-b border-gray-200 last:border-b-0 hover:bg-accent hover:text-primary ${selectedCategory === category.slug ? 'bg-accent text-primary font-semibold' : ''}`}
                    role="menuitem"
                >
                    <span class="flex-1">{category.name}</span>
                    <span class={`inline-flex items-center justify-center min-w-7 h-7 px-2 rounded-full text-xs font-semibold ${selectedCategory === category.slug ? 'bg-[#C9E4F3] text-primary' : 'bg-gray-100 text-gray-600'}`}>{category.count}</span>
                    {selectedCategory === category.slug && (
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" class="text-primary shrink-0">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                    )}
                </a>
            ))}
        </div>
    </div>
</div>

<script>
    // Toggle dropdown menu
    const categoryButton = document.getElementById('category-button');
    const categoryMenu = document.getElementById('category-menu');

    if (categoryButton && categoryMenu) {
        categoryButton.addEventListener('click', () => {
            const isExpanded = categoryButton.getAttribute('aria-expanded') === 'true';
            categoryButton.setAttribute('aria-expanded', (!isExpanded).toString());

            if (!isExpanded) {
                categoryMenu.classList.remove('opacity-0', 'invisible', '-translate-y-2');
                categoryMenu.classList.add('opacity-100', 'visible', 'translate-y-0');
                // Rotate chevron
                const chevron = categoryButton.querySelector('.chevron');
                if (chevron) chevron.classList.add('rotate-180');
            } else {
                categoryMenu.classList.add('opacity-0', 'invisible', '-translate-y-2');
                categoryMenu.classList.remove('opacity-100', 'visible', 'translate-y-0');
                // Rotate chevron back
                const chevron = categoryButton.querySelector('.chevron');
                if (chevron) chevron.classList.remove('rotate-180');
            }
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
            if (!categoryButton.contains(e.target as Node) && !categoryMenu.contains(e.target as Node)) {
                categoryButton.setAttribute('aria-expanded', 'false');
                categoryMenu.classList.add('opacity-0', 'invisible', '-translate-y-2');
                categoryMenu.classList.remove('opacity-100', 'visible', 'translate-y-0');
                // Rotate chevron back
                const chevron = categoryButton.querySelector('.chevron');
                if (chevron) chevron.classList.remove('rotate-180');
            }
        });
    }
</script>
