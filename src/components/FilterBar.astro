---
import type { CategoryInfo } from '../utils/categories';

interface Props {
    categories: CategoryInfo[];
    selectedCategory?: string;
    currentParams?: Record<string, string>;
}

const { categories, selectedCategory, currentParams = {} } = Astro.props;

// Build URL with updated category filter
function buildFilterUrl(category?: string): string {
    const params = new URLSearchParams(currentParams);
    if (category) {
        params.set('category', category);
    } else {
        params.delete('category');
    }
    params.delete('page'); // Reset to page 1 when filtering
    return `/products${params.toString() ? '?' + params.toString() : ''}`;
}
---

<div class="filter-bar">
    <div class="filter-section">
        <h3 class="filter-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            Filter by Category
        </h3>
        <div class="category-filters">
            <a 
                href={buildFilterUrl()} 
                class={`category-chip ${!selectedCategory ? 'active' : ''}`}
                aria-current={!selectedCategory ? 'true' : undefined}
            >
                All Products
                <span class="category-count">{categories.reduce((sum, cat) => sum + cat.count, 0)}</span>
            </a>
            {categories.map(category => (
                <a 
                    href={buildFilterUrl(category.slug)} 
                    class={`category-chip ${selectedCategory === category.slug ? 'active' : ''}`}
                    aria-current={selectedCategory === category.slug ? 'true' : undefined}
                >
                    {category.name}
                    <span class="category-count">{category.count}</span>
                </a>
            ))}
        </div>
    </div>

    {selectedCategory && (
        <div class="active-filters">
            <span class="active-filter-label">Active Filter:</span>
            <a href={buildFilterUrl()} class="clear-filter">
                {categories.find(c => c.slug === selectedCategory)?.name}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </a>
        </div>
    )}
</div>

<style>
    .filter-bar {
        background: var(--color-surface);
        border-radius: 12px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .filter-section {
        margin-bottom: 1rem;
    }

    .filter-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--color-text);
    }

    .filter-title svg {
        color: var(--color-primary);
    }

    .category-filters {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .category-chip {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border: 2px solid var(--color-border);
        border-radius: 50px;
        background: white;
        color: var(--color-text);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .category-chip:hover {
        border-color: var(--color-primary);
        background: var(--color-accent);
        color: var(--color-primary);
        transform: translateY(-2px);
    }

    .category-chip.active {
        background: var(--color-primary);
        border-color: var(--color-primary);
        color: white;
    }

    .category-count {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 1.5rem;
        height: 1.5rem;
        padding: 0 0.4rem;
        background: rgba(0, 0, 0, 0.1);
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .category-chip.active .category-count {
        background: rgba(255, 255, 255, 0.2);
    }

    .active-filters {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid var(--color-border);
    }

    .active-filter-label {
        font-size: 0.875rem;
        color: var(--color-text-muted);
        font-weight: 500;
    }

    .clear-filter {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.4rem 0.75rem;
        background: var(--color-primary);
        color: white;
        border-radius: 50px;
        text-decoration: none;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .clear-filter:hover {
        background: var(--color-primary-dark);
        transform: scale(1.05);
    }

    .clear-filter svg {
        opacity: 0.8;
    }

    @media (max-width: 768px) {
        .filter-bar {
            padding: 1rem;
        }

        .category-chip {
            font-size: 0.875rem;
            padding: 0.4rem 0.75rem;
        }
    }
</style>
